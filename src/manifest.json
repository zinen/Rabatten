{
  "manifest_version": 3,
  "name": "Rabatten",
  "version": "1.2.1",
  "description": "Rabat husker, et hurtigt klik og du kan se om du kan få rabat på siden",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "content.js"
      ]
    }
  ],
  "offline_enabled": false,
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon48.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}